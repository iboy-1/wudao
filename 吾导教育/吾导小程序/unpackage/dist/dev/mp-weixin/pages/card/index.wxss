page {
  background-color: #EDF2F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
  padding-bottom: 100rpx;
}
.add {
  position: relative;
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.add .title {
  padding: 0 26rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.add .add_box {
  padding: 0 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.add .add_box image {
  width: 20rpx;
  height: 12rpx;
  margin-left: 16rpx;
}
.add .bottom {
  width: 28rpx;
  height: 18rpx;
  margin: 0 30rpx;
}
.add .address {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}
.add .choice {
  position: absolute;
  z-index: 8;
  top: 82rpx;
  width: 670rpx;
  padding: 10rpx 40rpx 10rpx 80rpx;
  height: 300rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #cccccc;
  box-shadow: 0rpx 6rpx 20rpx rgba(128, 128, 128, 0.5);
}
.add .choice .choice_item {
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.add .choice .choice_item .name {
  font-size: 28rpx;
  color: #666666;
}
.content {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.content .card {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.content .card .top {
  padding: 40rpx 46rpx;
  position: relative;
}
.content .card .top .model {
  position: absolute;
  top: 40rpx;
  left: 46rpx;
  width: 658rpx;
  height: 400rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}
.content .card .top .border {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 616rpx;
  height: 360rpx;
  border: 2rpx solid #FFFFFF;
  opacity: 0.3;
  border-radius: 20rpx;
}
.content .card .top image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}
.content .card .top .card_name {
  position: absolute;
  left: 100rpx;
  top: 66rpx;
}
.content .card .top .card_name .name {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .card .top .card_name .rule {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.content .card .top .card_name1 {
  width: 550rpx;
  position: absolute;
  left: 100rpx;
  bottom: 76rpx;
}
.content .card .top .card_name1 .type {
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.content .card .top .card_name1 .hr {
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
}
.content .card .top .card_name1 .explain {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.content .card .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #E6E6E6;
}
.content .card .bottom .look {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.content .card .bottom image {
  width: 12rpx;
  height: 20rpx;
}

