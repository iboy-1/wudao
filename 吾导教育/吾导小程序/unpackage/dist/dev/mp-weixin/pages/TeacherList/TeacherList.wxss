.page {
  width: 750rpx;
  margin: 0 auto;
}
.list {
  padding: 0rpx 46rpx 0rpx 24rpx;
}
.list .item {
  width: 100%;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list .item .tx {
  width: 136rpx;
  height: 136rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.list .item .info_box {
  flex: 1;
}
.list .item .info_box .name_box {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list .item .info_box .name_box .name {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.list .item .info_box .name_box .sex {
  width: 28rpx;
  height: 28rpx;
  margin-left: 12rpx;
}
.list .item .info_box .auth_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 154rpx;
  height: 44rpx;
  margin: 12rpx 0;
  background: #7555FF;
  border-radius: 22rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.list .item .info_box .auth_box .auth {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.list .item .info_box .motto {
  width: 440rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.list .item .go {
  width: 12rpx;
  height: 20rpx;
}

