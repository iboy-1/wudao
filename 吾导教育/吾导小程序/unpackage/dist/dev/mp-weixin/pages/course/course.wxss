.page {
  width: 750rpx;
  margin: 0 auto;
}
.header {
  padding: 30rpx;
  background: linear-gradient(left, #3a3c48 0, #3a3c48 100%);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.header image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.header .right {
  margin-left: 30rpx;
}
.header .right .course {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.header .right .course .type {
  padding: 5rpx 10rpx;
  background-color: #fd9f45;
  font-size: 24rpx;
  color: #FFFFFF;
}
.header .right .course .course_name {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.header .right .date {
  line-height: 36rpx;
  font-size: 22rpx;
  color: #FFFFFF;
}
.introduce {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  color: #555555;
}
.introduce image {
  width: 16rpx;
  height: 12rpx;
  margin-left: 8rpx;
}
.introduce_info {
  height: 80rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: grey;
  transition: all 0.4s cubic-bezier(0.25, 1, 0.25, 1);
}
.introduce_info .text {
  padding-top: 20rpx;
}
.introduce_info1 {
  height: 0rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: grey;
  transition: all 0.4s cubic-bezier(0.25, 1, 0.25, 1);
}
.hr {
  width: 100%;
  height: 2rpx;
  background-color: #cccccc;
}
.myCard {
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 60rpx;
  border-bottom: 2rpx solid #cccccc;
}
.myCard .no_card {
  font-size: 28rpx;
  text-align: center;
}
.myCard .myCard_list {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.myCard .myCard_list .top {
  padding: 0rpx 50rpx;
  position: relative;
}
.myCard .myCard_list .top image {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
}
.myCard .myCard_list .top .card_name {
  position: absolute;
  left: 100rpx;
  top: 50rpx;
}
.myCard .myCard_list .top .card_name .name {
  font-weight: 600;
  color: #555555;
}
.myCard .myCard_list .top .card_name .rule {
  font-size: 24rpx;
  font-weight: 600;
  color: #555555;
}
.myCard .myCard_list .top .card_name1 {
  width: 550rpx;
  position: absolute;
  left: 100rpx;
  bottom: 30rpx;
}
.myCard .myCard_list .top .card_name1 .type {
  display: flex;
  flex-direction: row-reverse;
  font-size: 28rpx;
  color: #555555;
}
.myCard .myCard_list .top .card_name1 .hr {
  width: 100%;
  height: 4rpx;
  background-color: #555555;
}
.myCard .myCard_list .top .card_name1 .explain {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #555555;
}
