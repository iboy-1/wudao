.page {
  padding: 30rpx;
  margin: 0 auto;
}
.title {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #cccccc;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.course {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding: 20rpx 40rpx 46rpx 20rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.course image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 22rpx;
}
.course .right {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.course .right .title1 {
  margin-bottom: 16rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.course .right .info {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #808080;
}
.no_video {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 100rpx;
}
.no_video image {
  width: 180rpx;
  height: 156rpx;
}
.no_video view {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}

