page {
  width: 750rpx;
}
.page {
  width: 750rpx;
  margin: 0 auto;
}
.tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  background-color: #FFFFFF;
}
.tab .tab_son {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height: 80rpx;
  padding-top: 20rpx;
}
.tab .tab_son .text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #45474D;
}
.tab .tab_son .hr {
  width: 40rpx;
  height: 6rpx;
  margin-top: 10rpx;
  background: #3091F2;
  border-radius: 4rpx;
}
.about {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #cccccc;
}
.about image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.about .about_info {
  flex: 1;
}
.about .about_info .title {
  margin-bottom: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.about .about_info .info {
  font-size: 24rpx;
  color: grey;
}
.content {
  display: flex;
  flex-direction: column;
  padding: 0 24rpx 150rpx 24rpx;
}
.content .course {
  display: flex;
  flex-direction: column;
  margin-top: 32rpx;
  padding-bottom: 16rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(255, 255, 255, 0.6);
}
.content .course image {
  width: 100%;
  height: 320rpx;
  margin-right: 22rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.content .course .right {
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content .course .right .centent {
  flex: 1;
}
.content .course .right .centent .title {
  margin-bottom: 16rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.content .course .right .centent .info {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #808080;
}
.content .course .right .centent .time {
  margin-top: 6rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #808080;
}
.content .course .right .state {
  margin-left: 24rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #D71418;
}
.content .no_course {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 100rpx;
}
.content .no_course image {
  width: 160rpx;
  height: 140rpx;
}
.content .no_course view {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}
.bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  height: 88rpx;
  padding: 24rpx 0;
  background-color: #f2f2f2;
  position: fixed;
  bottom: 0;
  left: 0;
}
.bottom .button {
  width: 702rpx;
  height: 88rpx;
  margin: 0 24rpx;
  background: #3091F2;
  border-radius: 10rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

