          transform: translate(-50%, -50%);
}
.myInfo {
  width: 678rpx;
  margin: 36rpx auto;
  padding: 24rpx 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
}
.myInfo .nowHlpe {
  margin-left: 24rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.myInfo .num {
  margin-left: 24rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.help_list {
  display: flex;
  flex-direction: column;
  width: 678rpx;
  height: 576rpx;
  padding-bottom: 24rpx;
  margin: 24rpx auto;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
}
.help_list .item_box {
  width: 100%;
  height: 0rpx;
  flex-grow: 1;
  overflow: hidden;
  overflow-y: auto;
}
.help_list .item_box .item {
  display: flex;
  flex-direction: row;
  padding: 20rpx 24rpx;
}
.help_list .item_box .item image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.help_list .item_box .item .name {
  font-size: 32rpx;
  color: #FFFFFF;
}
.help_list .text {
  padding: 18rpx 0;
  margin-left: 24rpx;
  font-size: 34rpx;
  color: #FFFFFF;
}
.button {
  width: 702rpx;
  margin: 24rpx;
  height: 88rpx;
  background: #3091F2;
  border-radius: 10rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

