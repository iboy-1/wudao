page {
  width: 750rpx;
  background-color: #EDF2F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
}
.item {
  position: relative;
  padding: 80rpx 24rpx 48rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #E6E6E6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item .course_img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 26rpx;
  border-radius: 32rpx;
}
.item .info {
  flex: 1;
}
.item .info .top {
  display: flex;
  flex-direction: row;
}
.item .info .top .type {
  margin-right: 20rpx;
  line-height: 40rpx;
  padding: 0rpx 8rpx;
  background-color: #fd9f45;
  font-size: 20rpx;
  color: #FFFFFF;
}
.item .info .top .name {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  font-weight: 600;
}
.item .info .bottom {
  font-size: 24rpx;
  color: #a5a5a5;
}
.item .label {
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
}
.item .label .label_item {
  width: 50rpx;
  height: 24rpx;
  margin-right: 16rpx;
  background: #FFBF66;
  border-radius: 0rpx 6rpx 0rpx 6rpx;
  font-size: 16rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
  line-height: 24rpx;
  color: #FFFFFF;
}
.item .teacher {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.item .button {
  width: 140rpx;
  height: 52rpx;
  background: #3091F2;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(48, 145, 242, 0.6);
  border-radius: 26rpx;
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.item .appoint {
  margin-top: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #3091F2;
}
.item .time {
  position: absolute;
  top: 16rpx;
  left: 0rpx;
  width: 336rpx;
  height: 48rpx;
  background: #EDF2F7;
  border-radius: 0rpx 24rpx 24rpx 0rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  text-align: center;
  line-height: 48rpx;
  color: #3091F2;
}
.no_video {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 100rpx;
}
.no_video image {
  width: 180rpx;
  height: 156rpx;
}
.no_video view {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}

