.page {
  width: 750rpx;
  height: 100vh;
  background-color: #EDF2F7;
  margin: 0 auto;
  overflow: hidden;
}
.header {
  width: 750rpx;
  height: 452rpx;
  padding: 36rpx 0;
  background: linear-gradient(180deg, #D4EFF6, #D4EFF6, #FFFFFF);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .head {
  width: 132rpx;
  height: 132rpx;
  margin: 0 30rpx;
  border-radius: 50%;
}
.header .username {
  margin: 20rpx 0;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.header .user-phone {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.header .myInfo {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.header .box {
  flex: 1;
  margin-top: 45rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header .box image {
  width: 92rpx;
  height: 92rpx;
  margin-bottom: 24rpx;
}
.header .box .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #2E3033;
}
.me {
  width: 710rpx;
  margin-top: 20rpx;
  background-color: #FFFFFF;
  padding: 0 24rpx 0 28rpx;
  display: flex;
  flex-direction: column;
}
.me .me_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.me .me_item .left_img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.me .me_item .right {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0 40rpx 0;
  border-bottom: 2rpx solid #D9D9D9;
}
.me .me_item .right text {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #45474D;
}
.me .me_item .right .right_img {
  width: 12rpx;
  height: 20rpx;
  margin-right: 20rpx;
}

