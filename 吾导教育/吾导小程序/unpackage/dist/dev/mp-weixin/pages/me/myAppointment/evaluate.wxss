page {
  width: 750rpx;
  background-color: #EDF2F7;
}
.page {
  padding: 18rpx 0rpx;
}
.top {
  width: 100%;
  border-radius: 15rpx;
  background-color: #FFFFFF;
}
.top .header {
  padding: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top .header image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.top .header .right {
  flex: 1;
}
.top .header .right .name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #45474C;
}
.top .header .right .teacher {
  margin-top: 15rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #808080;
}
.top .eva_box {
  padding: 36rpx;
}
.top .eva_box textarea {
  height: 200rpx;
  font-size: 30rpx;
}
.item {
  padding: 0 36rpx 36rpx 36rpx;
  border-bottom: 2rpx solid #E6E6E6;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item .eva {
  margin-right: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #45474D;
}
.item .pf {
  display: flex;
  align-items: center;
}
.bottom {
  padding: 30rpx;
  margin-top: 30rpx;
  border-radius: 15rpx;
  background-color: #FFFFFF;
}
.bottom .name {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  font-size: #333333;
}
.bottom .eva_box {
  width: 100%;
}
.button_box {
  padding: 40rpx 30rpx;
}
.button_box .button {
  width: 100%;
  height: 88rpx;
  background: #3091F2;
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
}

