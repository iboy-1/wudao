page {
  width: 750rpx;
  background-color: #F5F7F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
  padding-bottom: 100rpx;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #cccccc;
  background-color: #FFFFFF;
}
.item image {
  width: 36rpx;
  height: 36rpx;
  margin: 0 10rpx 0 20rpx;
}
.item .info {
  flex: 1;
  font-size: 32rpx;
}
.item .right {
  margin-right: 20rpx;
  font-size: 32rpx;
}
.item_box {
  width: 710rpx;
  padding: 0 0 0 40rpx;
  background-color: #FFFFFF;
}
.item_box .items {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 36rpx 0;
  border-bottom: 2rpx solid #cccccc;
  background-color: #FFFFFF;
}
.item_box .items .info {
  flex: 1;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #45474D;
}
.item_box .items .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 40rpx;
  text-align: right;
  font-size: 32rpx;
}
.item_box .items .right text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.item_box .items .right .img {
  width: 16rpx;
  height: 24rpx;
  margin-left: 32rpx;
}
.item_box .items .right .head_bottom {
  width: 88rpx;
  height: 88rpx;
  margin-right: 6rpx;
  border-radius: 50%;
}
.item_box .items .right image {
  width: 140rpx;
  height: 140rpx;
}

