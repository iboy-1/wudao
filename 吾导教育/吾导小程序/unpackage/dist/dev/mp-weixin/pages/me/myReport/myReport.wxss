swiper .item .bottom {
  position: absolute;
  z-index: 9;
  width: 100%;
  height: 40rpx;
  bottom: 20rpx;
  -webkit-animation: animationup 1.5s infinite ease-in-out;
          animation: animationup 1.5s infinite ease-in-out;
}
swiper .item .bottom:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  margin-left: -12rpx;
  width: 28rpx;
  height: 28rpx;
  border-left: 6rpx solid #09aeef;
  border-top: 6rpx solid #09aeef;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
swiper .item .bottom:after {
  content: '';
  display: block;
  position: absolute;
  top: 18rpx;
  left: 50%;
  margin-left: -12rpx;
  width: 28rpx;
  height: 28rpx;
  border-left: 6rpx solid #09aeef;
  border-top: 6rpx solid #09aeef;
