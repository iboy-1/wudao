page {
  width: 750rpx;
  background-color: #EDF2F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
}
.my_card {
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 60rpx;
}
.my_card .no_card {
  font-size: 28rpx;
  text-align: center;
}
.my_card .myCard_list {
  width: 100%;
  padding-top: 40rpx;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.my_card .myCard_list .top {
  padding: 0rpx 46rpx;
  position: relative;
}
.my_card .myCard_list .top .model {
  position: absolute;
  top: 0rpx;
  left: 46rpx;
  width: 658rpx;
  height: 400rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}
.my_card .myCard_list .top .border {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 616rpx;
  height: 360rpx;
  border: 2rpx solid #FFFFFF;
  opacity: 0.5;
  border-radius: 20rpx;
}
.my_card .myCard_list .top image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}
.my_card .myCard_list .top .card_name {
  position: absolute;
  left: 100rpx;
  top: 48rpx;
}
.my_card .myCard_list .top .card_name .name {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.my_card .myCard_list .top .card_name .rule {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.my_card .myCard_list .top .card_name1 {
  width: 550rpx;
  position: absolute;
  left: 100rpx;
  bottom: 34rpx;
}
.my_card .myCard_list .top .card_name1 .type {
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.my_card .myCard_list .top .card_name1 .hr {
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
}
.my_card .myCard_list .top .card_name1 .explain {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}
.my_card .myCard_list .num {
  padding: 20rpx 46rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.my_card .myCard_list .byDate {
  padding: 0rpx 46rpx 20rpx 46rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.my_card .myCard_list .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 46rpx;
  border-top: 2rpx solid #E6E6E6;
}
.my_card .myCard_list .bottom .look {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.my_card .myCard_list .bottom image {
  width: 12rpx;
  height: 20rpx;
}
.button_box {
  padding: 30rpx;
}
.button_box .button {
  width: 100%;
  height: 88rpx;
  background-color: #3a3c48;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
  border-radius: 8rpx;
}

