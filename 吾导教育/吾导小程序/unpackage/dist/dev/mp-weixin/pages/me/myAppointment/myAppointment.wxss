page {
  width: 750rpx;
  background-color: #EDF2F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
}
.tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding-top: 20rpx;
  background-color: #FFFFFF;
}
.tab .tab_son {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 70rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #45474D;
}
.tab .tab_son .hr {
  width: 40rpx;
  height: 6rpx;
  margin-top: 10rpx;
  background: #3091F2;
  border-radius: 4rpx;
}
.venue {
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.venue image {
  width: 20rpx;
  height: 12rpx;
  margin: 15rpx 10rpx 10rpx 10rpx;
}
.content {
  display: flex;
  flex-direction: column;
}
.content .head {
  margin-top: 24rpx;
  padding: 30rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #e6e6e6;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.content .head .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.content .head .left image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.content .head .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.content .head .right image {
  width: 12rpx;
  height: 18rpx;
  margin-left: 10rpx;
}
.content .course {
  position: relative;
  padding: 80rpx 30rpx 48rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #E6E6E6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content .course .course_img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 26rpx;
  border-radius: 32rpx;
}
.content .course .info {
  flex: 1;
}
.content .course .info .top {
  display: flex;
  flex-direction: row;
}
.content .course .info .top .type {
  margin-right: 20rpx;
  line-height: 40rpx;
  padding: 0rpx 8rpx;
  background-color: #fd9f45;
  font-size: 20rpx;
  color: #FFFFFF;
}
.content .course .info .top .name {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  font-weight: 600;
}
.content .course .info .bottom {
  font-size: 24rpx;
  color: #a5a5a5;
}
.content .course .label {
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
}
.content .course .label .label_item {
  width: 50rpx;
  height: 24rpx;
  margin-right: 16rpx;
  background: #FFBF66;
  border-radius: 0rpx 6rpx 0rpx 6rpx;
  font-size: 16rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
  line-height: 24rpx;
  color: #FFFFFF;
}
.content .course .teacher {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.content .course .button_box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.content .course .button {
  width: 140rpx;
  height: 52rpx;
  background: #FFFFFF;
  border: 2rpx solid #CCCCCC;
  border-radius: 26rpx;
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #4D4D4D;
}
.content .course .button1 {
  width: 140rpx;
  height: 52rpx;
  background: #17E6BC;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(23, 230, 188, 0.6);
  border-radius: 26rpx;
  border: none;
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.content .course .appoint {
  margin-top: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #3091F2;
}
.content .course .time {
  position: absolute;
  top: 16rpx;
  left: -10rpx;
  width: 336rpx;
  height: 48rpx;
  background: #EDF2F7;
  border-radius: 0rpx 24rpx 24rpx 0rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  text-align: center;
  line-height: 48rpx;
  color: #3091F2;
}
.content .course .time1 {
  position: absolute;
  top: 16rpx;
  left: -10rpx;
  width: 130rpx;
  height: 48rpx;
  background: #EDF2F7;
  border-radius: 0rpx 24rpx 24rpx 0rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  text-align: center;
  line-height: 48rpx;
  color: #999999;
}
.content .no_course {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 100rpx;
}
.content .no_course image {
  width: 180rpx;
  height: 156rpx;
}
.content .no_course view {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}
.model {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
}
.eva_box {
  width: 100%;
  background: #FFFFFF;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.eva_box .bottom {
  padding: 30rpx;
}
.eva_box .bottom textarea {
  width: 660rpx;
  height: 150rpx;
  background-color: #dddddd;
  border-radius: 10rpx;
  padding: 15rpx;
}

