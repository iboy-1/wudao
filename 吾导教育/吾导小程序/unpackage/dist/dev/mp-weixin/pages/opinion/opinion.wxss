page {
  width: 750rpx;
  background-color: #EDF2F7;
}
.page {
  width: 750rpx;
  margin: 0 auto;
}
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 160rpx;
  background: linear-gradient(left, #3a3c48 0, #3a3c48 100%);
}
.header image {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 40rpx;
  border-radius: 50%;
}
.header .studio {
  font-size: 32rpx;
  color: #FFFFFF;
}
.content {
  margin-top: 10rpx;
  padding: 0 30rpx;
  background-color: #FFFFFF;
}
.content .opinion {
  padding: 40rpx 0 20rpx 0;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.content .text {
  margin: 10rpx 0;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #808080;
}
.content textarea {
  margin: 20rpx auto;
  font-size: 28rpx;
  width: 622rpx;
  height: 312rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border: 2rpx solid #CCCCCC;
  border-radius: 10rpx;
}
.content .pushImg {
  margin: 40rpx 0 20rpx 0;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.content .choiceImg {
  display: flex;
  flex-direction: row;
}
.content .choiceImg .upload {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 176rpx;
  height: 176rpx;
  background: #FFFFFF;
  border: 2rpx solid #CCCCCC;
  border-radius: 10rpx;
}
.content .choiceImg .upload image {
  width: 80rpx;
  height: 80rpx;
}
.content .choiceImg .img_box {
  position: relative;
}
.content .choiceImg .img_box .img {
  width: 176rpx;
  height: 176rpx;
  margin-left: 20rpx;
}
.content .choiceImg .img_box .close {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}
.content input {
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #cccccc;
}
.button_box {
  padding: 40rpx 30rpx;
  background-color: #FFFFFF;
}
.button_box .button {
  width: 100%;
  height: 88rpx;
  background: #3091F2;
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
}

