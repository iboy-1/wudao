.page {
  width: 750rpx;
  margin: 0 auto;
  padding-bottom: 50rpx;
  background: #EBEFF2;
}
.banner {
  position: relative;
}
swiper {
  width: 100%;
  height: 400rpx;
}
swiper swiper-item {
  width: 100%;
  height: 100%;
}
swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.dots-container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 24rpx;
  display: flex;
  justify-content: center;
}
.dot {
  margin: 0 8rpx;
  width: 8rpx;
  height: 8rpx;
  background: #FFFFFF;
  opacity: 1;
  border-radius: 50%;
  transition: all .5s;
}
.dot.active {
  width: 40rpx;
  height: 8rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.content {
  padding: 24rpx;
  display: flex;
  flex-direction: row;
}
.content .news_box {
  position: relative;
  padding: 40rpx 26rpx 16rpx 40rpx;
  width: 320rpx;
  height: 344rpx;
  margin-right: 24rpx;
  border-radius: 32rpx;
  background-color: #FFFFFF;
}
.content .news_box .back-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
}
.content .news_box .news {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content .news_box .news .news_txt {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.content .news_box .news .news_txt1 {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #B3B3B3;
}
.content .news_box .news .news_txt1 image {
  width: 28rpx;
  margin-left: 10rpx;
  height: 20rpx;
}
.content .news_box .news .imgs {
  margin-top: 40rpx;
}
.content .news_box .news .imgs image {
  width: 204rpx;
  height: 192rpx;
}
.content .right {
  width: 362rpx;
  height: 400rpx;
}
.content .right .course {
  position: relative;
  display: flex;
  padding: 30rpx 26rpx 16rpx 40rpx;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 190rpx;
  border-radius: 32rpx;
  background-color: #FFFFFF;
}
.content .right .course .back-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
}
.content .right .course .right-content {
  display: flex;
  flex-direction: column;
}
.content .right .course .right-content .name {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.content .right .course .right-content .name1 {
  margin: 20rpx 0 12rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #B3B3B3;
}
.content .right .course .right-content .go {
  width: 36rpx;
  height: 36rpx;
}
.content .right .course .imgs {
  display: flex;
  align-items: flex-end;
  height: 130rpx;
}
.content .right .course .imgs .imgs1 {
  width: 72rpx;
  height: 130rpx;
}
.content .right .course .imgs .imgs2 {
  width: 88rpx;
  height: 70rpx;
}
.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.list .list_son {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 190rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin: 0 0 20rpx 24rpx;
}
.list .list_son .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.list .list_son .centent {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.list .list_son .centent .img {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.list .list_son .centent .news_txt {
  font-size: 24rpx;
  color: #333333;
}
.list .list_son .centent .news_txt1 {
  font-size: 24rpx;
  color: #999999;
}
.text {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.venue {
  margin-top: 40rpx;
  padding: 0 24rpx;
}
.venue .nearby {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.venue .nearby .hr {
  width: 8rpx;
  height: 30rpx;
  margin-right: 14rpx;
  background: #292E33;
  border-radius: 4rpx;
}
.venue .nearby .text1 {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4D4D4D;
}
.recommend-box {
  white-space: nowrap;
  /*文本不会换行，文本会在在同一行上继续*/
  box-sizing: border-box;
  padding-bottom: 12rpx;
  width: calc(100% - 24rpx);
  margin-bottom: 30rpx;
}
.recommend-box .recommend-item {
  position: relative;
  width: 600rpx;
  height: 300rpx;
  margin-right: 24rpx;
  display: inline-block;
  /*行内块元素*/
  position: relative;
}
.recommend-box .recommend-item:last-child {
  margin-right: 0;
}
.recommend-box .recommend-item .model {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  background: rgba(0, 0, 0, 0.3);
}
.recommend-box .recommend-item .img-wrapper {
  position: relative;
  width: 600rpx;
  height: 300rpx;
  border-radius: 32rpx;
  overflow: hidden;
}
.recommend-box .recommend-item .img-wrapper .recommend-img {
  width: 100%;
  height: 100%;
}
.recommend-box .recommend-item .img-wrapper .fabulous {
  height: 50rpx;
  position: absolute;
  z-index: 102;
  left: 30rpx;
  bottom: 50rpx;
  display: flex;
  flex-direction: column;
}
.recommend-box .recommend-item .img-wrapper .fabulous image {
  width: 26rpx;
  height: 32rpx;
  margin-left: 40rpx;
}
.recommend-box .recommend-item .img-wrapper .fabulous .title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.recommend-box .recommend-item .img-wrapper .fabulous .add_box {
  display: flex;
  flex-direction: row;
}
.recommend-box .recommend-item .img-wrapper .fabulous .address {
  width: 464rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommend-box .recommend-item .hotel-name {
  width: 95%;
  font-size: 26rpx;
  color: #E5E5E5;
  line-height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recommend-box .recommend-item .hotel-price {
  font-size: 26rpx;
  color: #E5E5E5;
}
.recommend-box .recommend-item .hotel-price .qi {
  color: #5BB725;
  font-weight: bold;
}
.recommend-box .recommend-item .introduction {
  width: 80%;
  font-size: 20rpx;
  color: #808080;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
::-webkit-scrollbar {
  display: none;
}

